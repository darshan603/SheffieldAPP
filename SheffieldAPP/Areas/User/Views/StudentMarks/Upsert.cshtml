@model SheffieldAPP.Models.StudentMarks
@{
    ViewData["Title"] = "Upsert";
}


<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="card-title" style="font-weight:bold">Mark Grade</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="StudentSubjectId" value="@Model.StudentSubjectId" class="form-control" />
                <div class="form-group row">
                    <div class="col-4">
                        <label>Name</label>
                    </div>
                    <div class="col-8">
                        <input type="number" max="100" min="0" asp-for="Score" class="form-control" />
                        <span asp-validation-for="Score" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
                            <partial name="_EditAndBackToListButton" model="Model.Id" /> }
                        else
                        {
                            <partial name="_CreateAndBackToListButton" />}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

