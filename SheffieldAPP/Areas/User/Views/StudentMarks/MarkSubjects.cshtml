
@{
    ViewData["Title"] = "MarkSubjects";
}


<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="mt-2 mb-2 mr-2 ml-2">
                    <h4 style="display:inline;">@TempData["stName"]</h4>
                    <a class="btn btn-outline-success" style="float: right;" asp-area="User" asp-action="Index">Back To List</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header bg-gradient-lightblue">
                    <h3 class="card-title" style="font-weight:bold">Students Subject List</h3>
                </div>
                <div class="card-body">
                    <table id="tblDataStSub" class="table table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr class="table-info">
                                <th>Subject Code</th>
                                <th>Subject Name</th>
                                <th>Score</th>
                                <th>Grade</th>
                                <th style="text-align:center">Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/Custom/studentMarks.js"></script>
}

