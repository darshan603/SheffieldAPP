@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">Student List</h3>
        </div>
        <div class="card-header">
            <div class="card-tools">
                <a type="button" class="btn btn-primary  text-sm" asp-action="Upsert">
                    <i class="fas fa-plus"></i> &nbsp; Create New Student
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="tblData" class="table table-bordered table-hover" style="width:100%">
                <thead>
                    <tr class="table-info">
                        <th>Code</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>TpNo</th>
                        <th style="text-align:center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/Custom/student.js"></script>
}


